  <div class="row">
    <div class="box">
      <div class="col-lg-12">
        <%= form_tag locations_path, method: :get do %>
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Enter City (ex. Nashville)"  %>
          <div class="text-center">
            <br>
            <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
          </div>
        <% end %>
        <hr>
        <h1 class="intro-text text-center">Locations</h1>
        <hr>
        <div class="row">
          <h3>Coworking Spaces Found</h3>
